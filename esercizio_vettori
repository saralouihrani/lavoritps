<html>
  <body onload="numeri()">
	<table border="1px solid black"><tr id="vettoreTot"></tr></table>
	<hr>
	<table border="1px solid black"><tr id="vettoreMag"></tr></table>
	<hr>
	media: <div id="media"></div>
	massimo: <div id="massimo"></div>
	minimo: <div id="minimo"></div>

  <script>

  const tutti = [];
  const magg = [];
  let somma = 0;
  let max = 0;
  let min = -100;
  let n = 0;

function numeri() { 

  for (let i = 0; i < 100; i++) { //logica
    n = Math.floor(Math.random() * 201) - 100;  //Genero tutti i numeri compresi tra -100 e 100 
    tutti[i] = n; 				//Associo i numeri agli elementi del vettore
    somma += n;					//Mentre genero i numeri ricavo la somma progressiva
    if (n > max) {
		max = n;
                document.getElementById("massimo").innerHTML = max;  //Stampo il numero massimo
    	}
    if (n < min) {
		min = n;
		document.getElementById("minimo").innerHTML = min;   //Stampo il numero minimo
	}
  }
 
  let media = somma / tutti.length;  //Ricavo la media dividendo il numero globale per la lunghezza del vettore (100)
  document.getElementById("media").innerHTML = media;

  for (let i = 0; i < tutti.length; i++) {
    if (tutti[i] > 50){
        magg.push(tutti[i]);  //Creo il vettore dei maggori di 50 (logica)
    }
  }




  let arrHTML = ""; 		//STAMPO TUTTO IL VETTORE (HTML)
  for (let i = 0; i < tutti.length; i++) {
    arrHTML += "<td>" + tutti[i] + "</td>";
  }
  document.getElementById("vettoreTot").innerHTML = arrHTML;


  let arrMaggHTML = ""; 	//STAMPO I MAGGIORI DI 50 (HTML)
  for (let i = 0; i < magg.length; i++) {
    arrMaggHTML +="<td>" + magg[i] + "</td> ";
  }
  document.getElementById("vettoreMag").innerHTML = arrMaggHTML;
}

</script>
</body>
</html>
